{
  "version": "2017-02-28",
  "operation": "Query",
  "query": {
    "expression": "shareholderId = :shareholderId AND companyId = :companyId",
    "expressionValues": {
      ":shareholderId": {
        "S": "$ctx.identity.sub"
      },
      ":companyId": {
        "S": "$ctx.source.companyId"
      }
    }
  },
  "limit": #if( $ctx.args.limit ) $ctx.args.limit #else 20 #end,
  "nextToken": #if( $ctx.args.nextToken ) "$ctx.args.nextToken" #else null #end
}
